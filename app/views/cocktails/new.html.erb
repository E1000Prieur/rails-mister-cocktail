<div class="container">
  <div class="row">
    <div class="col">
      <h1>Add a new cocktail</h1>

      <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name %>
      <%= f.submit class: 'btn btn-primary' %>
      <% end %>
      <%= link_to "Go back", cocktails_path %>
    </div>
  </div>
</div>


